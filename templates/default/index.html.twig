{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div style="max-width: 800px; margin: 0 auto; padding: 2rem; font-family: Arial, sans-serif;">
    <header style="text-align: center; margin-bottom: 3rem;">
        <h1 style="color: #2c3e50; font-size: 2.5rem; margin-bottom: 1rem;">
            🚀 {{ title }}
        </h1>
        <p style="color: #7f8c8d; font-size: 1.2rem; line-height: 1.6;">
            {{ message }}
        </p>
        
        <!-- Section utilisateur connecté/non connecté -->
        <div style="margin-top: 2rem; padding: 1rem; background: #ecf0f1; border-radius: 8px;">
            {% if app.user %}
                <!-- Utilisateur connecté -->
                <div style="color: #27ae60;">
                    <p style="margin: 0; font-size: 1.1rem;">
                        👋 Bonjour <strong>{{ app.user.firstname ? app.user.firstname : app.user.email }}</strong> !
                    </p>
                    <div style="margin-top: 0.5rem;">
                        <a href="{{ path('app_profile') }}" 
                           style="display: inline-block; 
                                  margin-right: 0.5rem;
                                  background: #3498db; 
                                  color: white; 
                                  padding: 0.5rem 1rem; 
                                  text-decoration: none; 
                                  border-radius: 5px; 
                                  font-size: 0.9rem;">
                            👤 Mon profil
                        </a>
                        <a href="{{ path('app_logout') }}" 
                           style="display: inline-block; 
                                  background: #e74c3c; 
                                  color: white; 
                                  padding: 0.5rem 1rem; 
                                  text-decoration: none; 
                                  border-radius: 5px; 
                                  font-size: 0.9rem;">
                            🚪 Se déconnecter
                        </a>
                    </div>
                </div>
            {% else %}
                <!-- Utilisateur non connecté -->
                <div style="color: #7f8c8d;">
                    <p style="margin: 0; margin-bottom: 0.5rem;">Vous n'êtes pas connecté</p>
                    {# <a href="{{ path('app_login') }}"  #}
                    <a href="{{ path('app_oups') }}" 
                       style="display: inline-block; 
                              background: #3498db; 
                              color: white; 
                              padding: 0.5rem 1rem; 
                              text-decoration: none; 
                              border-radius: 5px; 
                              font-size: 0.9rem;">
                        🔐 Se connecter
                    </a>
                </div>
            {% endif %}
        </div>
    </header>

