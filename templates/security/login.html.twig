{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div style="max-width: 500px; margin: 0 auto; padding: 2rem; font-family: Arial, sans-serif;">
    <header style="text-align: center; margin-bottom: 3rem;">
        <h1 style="color: #2c3e50; font-size: 2.5rem; margin-bottom: 1rem;">
            🔐 Connexion
        </h1>
        <p style="color: #7f8c8d; font-size: 1.1rem;">
            Connectez-vous à votre compte
        </p>
    </header>

    {% if error %}
        <div style="background: #e74c3c; color: white; padding: 1rem; border-radius: 5px; margin-bottom: 1.5rem; text-align: center;">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form method="post" style="background: #f8f9fa; padding: 2rem; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <div style="margin-bottom: 1.5rem;">
            <label for="inputEmail" style="display: block; margin-bottom: 0.5rem; color: #2c3e50; font-weight: bold;">
                📧 Email
            </label>
            <input type="email" 
                   value="{{ last_username }}" 
                   name="_username" 
                   id="inputEmail" 
                   style="width: 100%; 
                          padding: 0.75rem; 
                          border: 2px solid #bdc3c7; 
                          border-radius: 5px; 
                          font-size: 1rem;
                          box-sizing: border-box;" 
                   autocomplete="email" 
                   required 
                   autofocus>
        </div>

        <div style="margin-bottom: 2rem;">
            <label for="inputPassword" style="display: block; margin-bottom: 0.5rem; color: #2c3e50; font-weight: bold;">
                🔑 Mot de passe
            </label>
            <input type="password" 
                   name="_password" 
                   id="inputPassword" 
                   style="width: 100%; 
                          padding: 0.75rem; 
                          border: 2px solid #bdc3c7; 
                          border-radius: 5px; 
                          font-size: 1rem;
                          box-sizing: border-box;" 
                   autocomplete="current-password" 
                   required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit" 
                style="width: 100%; 
                       background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
                       color: white; 
                       padding: 0.75rem; 
                       border: none; 
                       border-radius: 5px; 
                       font-size: 1.1rem; 
                       font-weight: bold; 
                       cursor: pointer; 
                       margin-bottom: 1.5rem;">
            🚀 Se connecter
        </button>
    </form>

    <div style="text-align: center; margin-top: 2rem;">
        <a href="{{ path('app_default') }}" 
           style="color: #3498db; text-decoration: none; font-weight: bold;">
            ← Retour à l'accueil
        </a>
    </div>

    <div style="background: #e8f5e8; 
                padding: 1.5rem; 
                border-radius: 8px; 
                margin-top: 2rem; 
                border-left: 4px solid #27ae60;">
        <h3 style="color: #27ae60; margin-top: 0; font-size: 1.1rem;">💡 Compte de démonstration</h3>
        <p style="color: #2c3e50; margin-bottom: 0.5rem; font-size: 0.9rem;">
            <strong>Email :</strong> demo@symfony.fr<br>
            <strong>Mot de passe :</strong> azerty
        </p>
    </div>
</div>
{% endblock %}
